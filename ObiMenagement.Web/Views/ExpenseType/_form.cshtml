@model ExpenseTypeViewModel

<input asp-for="Id" hidden />
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label"></label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Currency" class="control-label"></label>
    <select asp-for="CurrencyId" class="form-control selectAdd">
        <option selected value="@Model.CurrencyId">@Model.Currency</option>
    </select>
    <span asp-validation-for="CurrencyId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="PaymentType" class="control-label"></label>
    <select asp-for="PaymentTypeId" class="form-control selectAdd">
        <option selected value="@Model.PaymentTypeId">@Model.PaymentType</option>
    </select>
    <span asp-validation-for="PaymentTypeId" class="text-danger"></span>
</div>

<div class="form-group CheckboxGroup">
    <label asp-for="IsFuel" class="control-label"></label>
    <input asp-for="IsFuel" class="form-check-input" />
    <span asp-validation-for="IsFuel" class="text-danger"></span>
</div>
<div class="form-group CheckboxGroup">
    <label asp-for="IsPrepaymentGivenToEmployee" class="control-label"></label>
    <input asp-for="IsPrepaymentGivenToEmployee" class="form-check-input" />
    <span asp-validation-for="IsFuel" class="text-danger"></span>
</div>
